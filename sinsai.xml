<script language="javascript">
$(function($,data) {
    //set up map
    ushahidi = $.ushahidi({"endpoint":endpoint,"limit":3});
    $.getData('/appdata/@viewer/@self', {}, function(data) {
        $.each(data, function(userId, data) {
            if( data.address == null || data.sw == null || data.ne == null ){
                message("住所を入力してください　<a href=\"javascript:$.view('canvas', { url: 'test' });\">詳細画面へ </a>");
                
            }
            ushahidi.incidents({
                "sw":data.sw,
                "ne":data.ne,
                "keyword":data.keyword,
                "c":data.c,
            },function(data){
                var clone = $("#incidents_template").clone();
                    clone.attr("id","incidents" + offset);
                    $("#holder").append(clone);
                    $('#incidents' + offset).render({ incidents: data }).show();
            });
            $(window).adjustHeight();
        });
    });
    $("#more_button").click(function(){
        $.view('canvas');
    });
});


</script>
